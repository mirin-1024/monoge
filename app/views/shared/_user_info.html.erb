<section class="user-info">
  <% @user ||= current_user %>
  <div class="user-image">
    <%= link_to image_tag(@user.image_url(:thumb60)), @user %>
  </div>
  <div class="user-detail">
    <span><%= link_to @user.name, @user %></span>
    <span class="post-count"><%= @user.posts.count %> 投稿</span>
  </div>
</section>
