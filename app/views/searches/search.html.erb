<% provide(:title, "#{@search_word} / 検索") %>
<div class="container">
  <div class="card">
    <% if @search_results.any? %>
      <ul class="list-group">
        <% @search_results.each do |search_result| %>
          <% if @search_model == "User" %>
            <li class="list-group-item">
              <%= link_to search_result.name, user_path(search_result) %>
            </li>
          <% else @search_model == "Post" %>
            <li class="list-group-item">
              <span class="post-">
                <%= link_to search_result.user.name, user_path(search_result.user) %>
              </span>
              <span class="post-content">
                <p><%= search_result.content %></p>
                <%= image_tag search_result.display_image if search_result.image.attached? %>
              </span>
            </li>
          <% end %>
        <% end %>
      </ul>

      <%= will_paginate @search_results, params: { controller: :searches, action: :search } %>
    <% end %>
  </div>
</div>
