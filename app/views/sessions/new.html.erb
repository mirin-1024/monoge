<% provide(:title, 'ログイン') %>
<section class="login-wrapper row">
  <div class="col-md-4">
    <div class="login-title">
      <h3>ログイン</h3>
    </div>
    <div class="login-form">
      <%= form_with url: login_path, scope: :session, local: true, class: "form-group" do |f| %>
        <%#= render 'shared/error_messages', object: f.object %>

        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :password, "パスワード" %>
        <span class="forgot-pass">
          <%= link_to 'お忘れですか？', new_password_reset_path %>
        </span>
        <%= f.password_field :password, class: "form-control" %>

        <div class="login-remember form-check">
          <%= f.check_box :remember_me, class: "form-check-input", id: "defaultCheck1" %>
          <%= f.label :remember_me, '次回からは自動でログインする', class: "form-check-label", for: "defaultCheck1" %>
        </div>

        <%= f.submit "ログイン", class: "login-btn btn btn-primary btn-block" %>
      <% end %>
    </div>
    <div class="login-opt">
      未登録の方は<%= link_to 'こちら', signup_path %>
    </div>
  </div>
</section>
