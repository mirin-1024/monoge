<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-4 col-md-3">
      <h1>
        <%#= ユーザーの画像を表示 %>
        <%= @user.name %>
      </h1>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'follow_form' if logged_in? %>
      </section>
    </div>
    <div class="col-lg-5 col-md-4 col-md-3">
      <% if @user.microposts.any? %>
        <h3>投稿 (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>
