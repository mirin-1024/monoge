<% provide(:title, 'ログイン') %>
<div class="login-container container">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-4 col-md-3">
      <h1>ログイン</h1>
      <div class="login-form">
        <%= form_with url: login_path, scope: :session, local: true, class: "form-group" do |f| %>
          <%#= render 'shared/error_messages' %>

          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>

          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>

          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input", id: "defaultCheck1" %>
            <%= f.label class: "form-check-label", for: "defaultCheck1" do %>
              <span>次回からは自動でログインする</span>
            <% end %>
          </div>

          <div class="login-btn mx-auto">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      <p><%= link_to 'パスワードをお忘れですか？', new_password_reset_path %></p>
      </div>
    </div>
    <div class="w-100"></div>
    <p>未登録の方は<%= link_to 'こちら', signup_path %></p>
  </div>
</div>
