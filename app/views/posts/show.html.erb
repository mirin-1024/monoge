<% provide(:title, "#{@post.user.name} / #{@post.content}") %>
<div class="container">
  <div class="row">
    <div id="post-<%= @post.id %>" class="card col-8 offset-2">
      <h2 class="card-title">
        <%= link_to @post.user.name, @post.user %>
      </h2>
      <p class="card-text">
        <%= @post.content %>
        <%= image_tag post.image_url if post.image? %>
      </p>
      <div class="row">
        <div class="col-3">
          <%= render "likes/like", post: @post %>
        </div>
        <div class="col-3 offset-3">
          <% if current_user?(@post.user) %>
            <%= link_to "削除", @post, method: :delete, data: { confirm: "本当に削除しますか？" } %>
          <% end %>
        </div>
        <time class="col-3">
          <%= time_ago_in_words(@post.created_at) %>前
        </time>
      </div>
    </div>
  </div>
  <%= render 'comments/comment' %>
</div>
