<% provide(:title, "#{@title}一覧") %>
<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-4 col-md-3">
      <section class="user_info">
        <%#= 画像の表示 %>
        <h1><%= @user.name %></h1>
        <span><%= link_to "プロフィールを表示", @user %></span>
        <span><b>投稿：</b> <%= @user.microposts.count %></span>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
        <% if @users.any? %>
          <div class="user_avatars">
            <%# @users.each do |user| %>
              <%#= link_to gravatar_for(user, size: 30), user %>
            <%# end %>
          </div>
        <% end %>
      </section>
    </div>
    <div class="col-lg-5 col-md-4 col-md-3">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>
