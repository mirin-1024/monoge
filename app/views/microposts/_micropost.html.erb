<%= link_to "", micropost, class: "card" %>
  <li id="micropost-<%= micropost.id %>" class="card-body">
    <%#= ユーザーの画像 %>
    <span class="user card-title">
      <%= link_to micropost.user.name, micropost.user %>
    </span>
    <span class="content card-text">
      <%= micropost.content %>
      <%= image_tag micropost.display_image if micropost.image.attached? %>
    </span>
    <div class="post_stamps row d-flex justify-content-end">
      <div class="like_button col-sm-2">
        <%= render "likes/like", micropost: micropost %>
      </div>
      <div class="delete_button col-sm-2">
        <% if current_user?(micropost.user) %>
          <%= link_to "削除", micropost, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </div>
      <div class="timestamp col-sm-3">
        <%= time_ago_in_words(micropost.created_at) %>前
      </div>
    <div>
  </li>
<% end %>
