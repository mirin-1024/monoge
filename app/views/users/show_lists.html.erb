<% provide(:title, "#{@user.name}さんのモノリスト") %>
<div id="list-index" class="row">
  <div class="col-md-12">
    <h2 class="page-title"><%= @user.name %>さんのモノリスト</h2>
    <% if current_user?(@user) %>
      <div class="list-form">
        <%= form_with(model: @list, scope: :list, remote: true, class: "form-group") do |f|  %>

          <%= f.label :content, "商品名" %>
          <%= f.text_field :content, placeholder: "名前を入力...", class: "text-form form-control" %>

          <%= f.label :profile, "商品の説明" %>
          <%= f.text_field :profile, placeholder: "説明を入力...", class: "text-form form-control" %>

          <div class="search-link"><%= link_to '楽天プロダクト商品検索', lists_search_path, class: " btn btn-info btn-lg" %></div>

          <div class="form-btns">
            <%= f.label :image, class: 'img-btn' do %>
              <i class="btn-icon-form fas fa-image" type="submit"></i>
              <%= f.file_field :image %>
            <% end %>
            <%= f.button class: 'submit-btn' do %>
              <i class="btn-icon-form fas fa-check" type="submit"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    <section class="list-section">
      <%= render 'lists/list_feed' %>
    </section>
  </div>
</div>
