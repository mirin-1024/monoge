<% provide(:title, "#{@micropost.user.name} / #{@micropost.content}") %>
<div class="container">
  <div class="row">
    <div id="micropost-<%= @micropost.id %>" class="card col-8 offset-2">
      <h2 class="card-title">
        <%= link_to @micropost.user.name, @micropost.user %>
      </h2>
      <p class="card-text">
        <%= @micropost.content %>
        <%= image_tag @micropost.display_image if @micropost.image.attached? %>
      </p>
      <div class="row">
        <div class="col-3">
          <%= render "likes/like", micropost: @micropost %>
        </div>
        <div class="col-3 offset-3">
          <% if current_user?(@micropost.user) %>
            <%= link_to "削除", @micropost, method: :delete, data: { confirm: "本当に削除しますか？" } %>
          <% end %>
        </div>
        <time class="col-3">
          <%= time_ago_in_words(@micropost.created_at) %>前
        </time>
      </div>
    </div>
  </div>
  <%= render 'comments/comment' %>
</div>
